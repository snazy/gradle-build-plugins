{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchManagers": ["maven", "gradle", "gradle-wrapper"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchManagers": ["maven", "gradle", "gradle-wrapper"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 50,
  "prHourlyLimit": 10
}
